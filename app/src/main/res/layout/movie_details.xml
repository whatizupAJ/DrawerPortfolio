<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/rvdMovies"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#6A009688" />

    <TextView
        android:id="@+id/rvdTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/rvdMovies"
        app:layout_constraintStart_toStartOf="parent"
        />

    <RatingBar
        android:id="@+id/rvdRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rvdTitle"
        app:layout_constraintStart_toStartOf="@id/rvdTitle"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/rvdPlotTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rvdRating"
        app:layout_constraintStart_toStartOf="@id/rvdTitle"
        android:layout_marginTop="10dp"
        android:text="Plot" />

    <TextView
        android:id="@+id/rvdPlot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rvdPlotTitle"
        app:layout_constraintStart_toStartOf="@id/rvdTitle"
        android:layout_marginTop="10dp"
        android:text="Plot"
        />


    <TextView
        android:id="@+id/rvdCastTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rvdPlot"
        app:layout_constraintStart_toStartOf="@id/rvdTitle"
        android:layout_marginTop="10dp"
        android:text="Cast" />

    <TextView
        android:id="@+id/rvdCast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rvdCastTitle"
        app:layout_constraintStart_toStartOf="@id/rvdTitle"
        android:layout_marginTop="5dp"
        android:text="Cast"
        />

</androidx.constraintlayout.widget.ConstraintLayout>